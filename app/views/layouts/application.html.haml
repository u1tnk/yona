!!!
%html
  %head
    %title
      Yona
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .navbar
      .navbar-inner
        = link_to 'Yona', root_path, class: 'brand'
        - if current_user
          %ul.nav.pull-right
            %li.dropdown
              = link_to '#', class: "dropdown-toggle", "data-toggle" => "dropdown" do
                = raw(current_user.screen_name + '<span class="caret"></span>')
              %ul.dropdown-menu
                %li= link_to 'upload opml', url_for(controller: :feeds, action: :upload)
                %li= link_to 'new feed', new_feed_path
                %li= link_to "Logout" , logout_path

        - else
          %ul.nav
            %li= link_to "Login", "/auth/#{DEFAULT_PROVIDER}"

    = yield
